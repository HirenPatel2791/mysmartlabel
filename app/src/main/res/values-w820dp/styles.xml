    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue500</item>

        <!-- Support library compatibility -->
        <item name="background">@color/blue500</item>
    </style>

    <style name="SLMasterLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/white</item>
        <!--<item name="android:background">@drawable/bckg</item>-->
    </style>
    
    <style name="SLHubText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
    </style>
    <style name="SLTitleTextBase" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/SLTextAppearanceLargePlusBold</item>
    </style>
    <style name="SLTitleText" parent="SLTitleTextBase">
        <item name="android:padding">15dp</item>
    </style>
    <style name="SLTitleTextBkg" parent="SLTitleText">
        <item name="android:textColor">@color/text_color_text</item>
    </style>
    
    <style name="SLTitleTextWithSeparator" parent="SLTitleTextBase">
        <item name="android:paddingLeft">15dp</item>
   		<item name="android:paddingRight">15dp</item>
   		<item name="android:paddingTop">15dp</item>
    </style>
    <style name="SLTitleTextCompact" parent="SLTitleTextBase">
        <item name="android:paddingLeft">15dp</item>
   		<item name="android:paddingRight">15dp</item>
    </style>
    <style name="SLInfoText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">16dp</item>
   		<item name="android:paddingRight">12dp</item>
   		<item name="android:paddingTop">12dp</item>
	</style>
	<style name="SLInfoTextBlack" parent="@style/SLTextAppearanceMedium">
	    <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">20dp</item>
   		<item name="android:paddingRight">20dp</item>
   		<item name="android:paddingTop">12dp</item>
   		<item name="android:paddingBottom">12dp</item>
	</style>
	<style name="SLInfoTextBkg" parent="@style/SLInfoText">
        <item name="android:textColor">@color/text_color_text</item>        
	</style>
    <style name="SLLabelText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
   		<item name="android:paddingRight">12dp</item>
	</style>
	<style name="SLLabelTextBkg" parent="@style/SLLabelText">
        <item name="android:textColor">@color/text_color_dark_gray</item>
	</style>
	<style name="SLLinkText" parent="@style/SLTextAppearanceLarge">
        <item name="android:textColor">@color/orange</item>
	</style>
	<style name="SLLabelTextNoPadding" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textSize">16sp</item>
	</style>
    <style name="SLLabelTextBold" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingTop">12dip</item>
    </style>
    <style name="SLLabelTextSmallNoPadding" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_normal</item>
    </style>
    <style name="SLDialogListItem" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginTop">6dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAppearance">@style/SLTextAppearanceMedium</item>
    </style>
    <style name="SLDialogBGRelativeLayout" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#DD000000</item>
    </style>
    <style name="SLDialogMasterLinearLayout" >
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="SLDialogMasterLinearLayoutPadded" parent="@style/SLDialogMasterLinearLayout">
        <item name="android:padding">18dip</item>
    </style>
    <style name="SLHubIrisPadding" >
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="SLHubItemBlockPadding" >
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="SLHubLeftItemPadding" >
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="SLHubRightItemPadding" >
        <item name="android:paddingLeft">5dp</item>
    </style>
    <style name="SLHubTopItemPadding" >
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="SLHubBottomItemPadding" >
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="SLSettingItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="SLSettingDivider">
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/settings_divider_gray</item>
    </style>
    <style name="SLBottomBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/bottom</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="FBButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/facebook_button</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="SLTitleSeparator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/title_separator</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="SLHelpWebview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layerType">software</item>
    </style>
    <style name="SLSpannedEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <style name="SLLimitedEditText" parent="@style/SLTextAppearanceMedium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">15dp</item>    
        <item name="android:textColor">@color/text_color_edit</item>    
    </style>    
    <style name="SLImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/nav_drawer_list_background</item>
    </style>
    <style name="SLWebviewBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/action_bar_drawer_color</item>
        <item name="android:textAppearance">@style/SLTextAppearanceSmall</item>
    </style>
    <style name="SLWebviewBarbottom" parent="@style/SLWebviewBar">
        <item name="android:background">@drawable/webview_blackbar</item>        
    </style>

    <!-- Animation for dialog boxes -->
    <style name="DialogDownUpAnimationSequence">
        <item name="android:windowEnterAnimation">@anim/slide_out_down</item>
        <item name="android:windowExitAnimation">@anim/slide_up_dialog</item>
    </style>
    <style name="DialogDownUpAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogDownUpAnimationSequence</item>
    </style>

    <style name="DialogUpDownAnimationSequence">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
    <!-- Animation for dialog box -->
    <style name="DialogSlideDownAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogUpDownAnimationSequence</item>
    </style>

    <!-- Animation for dialog boxes -->
    <style name="DialogUpOutAnimationSequence">
        <item name="android:windowEnterAnimation">@anim/slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/slide_up_out</item>
    </style>
    <style name="DialogDownInUpOutAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogUpOutAnimationSequence</item>
    </style>

</resources>
